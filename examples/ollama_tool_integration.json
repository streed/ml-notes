{
  "name": "ml_notes_integration",
  "description": "Integration with ML Notes for intelligent note-taking and retrieval",
  "tools": [
    {
      "type": "function",
      "function": {
        "name": "create_note",
        "description": "Create a new note with AI-powered auto-tagging",
        "parameters": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "The title of the note"
            },
            "content": {
              "type": "string", 
              "description": "The main content of the note"
            },
            "tags": {
              "type": "string",
              "description": "Optional comma-separated tags"
            }
          },
          "required": ["title", "content"]
        }
      }
    },
    {
      "type": "function",
      "function": {
        "name": "search_notes",
        "description": "Search notes using vector similarity or text search",
        "parameters": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query string"
            },
            "limit": {
              "type": "integer",
              "description": "Maximum number of results to return",
              "default": 5
            },
            "use_vector": {
              "type": "boolean", 
              "description": "Use vector search if available",
              "default": true
            }
          },
          "required": ["query"]
        }
      }
    },
    {
      "type": "function",
      "function": {
        "name": "list_recent_notes",
        "description": "List the most recent notes",
        "parameters": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "integer",
              "description": "Number of notes to return",
              "default": 10
            }
          }
        }
      }
    },
    {
      "type": "function", 
      "function": {
        "name": "auto_tag_notes",
        "description": "Use AI to automatically tag notes",
        "parameters": {
          "type": "object",
          "properties": {
            "recent": {
              "type": "integer",
              "description": "Number of recent notes to auto-tag"
            },
            "note_ids": {
              "type": "array",
              "items": {"type": "integer"},
              "description": "Specific note IDs to auto-tag"
            },
            "apply": {
              "type": "boolean",
              "description": "Whether to apply tags or just suggest them",
              "default": false
            }
          }
        }
      }
    },
    {
      "type": "function",
      "function": {
        "name": "get_note_stats",
        "description": "Get statistics about the notes database",
        "parameters": {
          "type": "object",
          "properties": {}
        }
      }
    }
  ],
  "implementation": {
    "base_url": "http://localhost:8080/api/v1",
    "endpoints": {
      "create_note": {
        "method": "POST",
        "url": "/notes",
        "body_mapping": {
          "title": "title",
          "content": "content", 
          "tags": "tags",
          "auto_tag": true
        }
      },
      "search_notes": {
        "method": "POST",
        "url": "/notes/search",
        "body_mapping": {
          "query": "query",
          "limit": "limit",
          "use_vector": "use_vector"
        }
      },
      "list_recent_notes": {
        "method": "GET",
        "url": "/notes",
        "query_params": {
          "limit": "limit"
        }
      },
      "auto_tag_notes": {
        "method": "POST",
        "url": "/auto-tag/apply",
        "body_mapping": {
          "recent": "recent",
          "note_ids": "note_ids", 
          "apply": "apply",
          "overwrite": false
        }
      },
      "get_note_stats": {
        "method": "GET",
        "url": "/stats"
      }
    }
  },
  "usage_examples": [
    {
      "description": "Create a note about machine learning",
      "user_input": "Create a note about the basics of neural networks",
      "function_call": {
        "name": "create_note",
        "arguments": {
          "title": "Neural Network Basics",
          "content": "Neural networks are computational models inspired by biological neural networks. They consist of interconnected nodes (neurons) that process information through weighted connections. Key concepts include forward propagation, backpropagation, activation functions, and gradient descent optimization."
        }
      }
    },
    {
      "description": "Search for existing notes",
      "user_input": "Find my notes about Python programming",
      "function_call": {
        "name": "search_notes", 
        "arguments": {
          "query": "Python programming",
          "limit": 5
        }
      }
    },
    {
      "description": "Auto-tag recent notes",
      "user_input": "Automatically tag my 3 most recent notes",
      "function_call": {
        "name": "auto_tag_notes",
        "arguments": {
          "recent": 3,
          "apply": true
        }
      }
    }
  ]
}